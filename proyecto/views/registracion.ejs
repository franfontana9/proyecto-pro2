<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>
        <%- include("./partials/header") %>

            <main>
                <section class="center main-content">
                    <h1>Registrate</h1>
                    <form action="/users/login" method="get">
                        <div>
                            <label for="nombre">Nombre</label>
                            <input type="texto" name="nombre"  placeholder="Introduce nombre completo">
                        </div>
                        <div>
                            <label for="password">Contraseña</label>
                            <input type="password" name="password" placeholder="Introduce tu contraseña">
                        </div>
                        <div>
                        <div>
                            <label for="email">Email</label>
                            <input type="email" name="email"  placeholder="Introduce tu email">
                        </div>
                            <label for="pfp">Foto de perfil</label>
                            <input type="email" name="pfp"  placeholder="Introduce tu foto">
                        </div>
                        <div>
                            <label for="fecha">Fecha de nacimiento</label>
                            <input type="date" name="fecha"  placeholder="Introduce tu fecha de nacimiento">
                        </div>
                        <div>
                            <label for="dni">DNI</label>
                            <input type="number" name="dni"  placeholder="Introduce tu DNI">
                        </div>
                        <button type="submit">Registrate</button>
                    
                    </form>

                </section>
            </main>

            <%- include('./partials/footer') %>

    </body>

</html>