<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 

<body>
    <%- include("./partials/header") %> 

    <main>
        <div class="user-detail container">
            <section class="top main-content">
                <img class="profile" src="https://via.placeholder.com/100x100" alt="">
                <div class="info-usuario">
                    <p><%= usuario.username%></p> 
                    <a class="follow" href="">seguir</a>
                    <ul class="meta">
                        <li><%=usuario.posteos%> Posts</li>
                        <li><%=usuario.seguidores%>seguidores</li>
                        <li><%=usuario.seguidos%>seguidos</li>
                    </ul>
                </div>
            </section>
            <section class="bottom">
                <% for (let i = 0; i < posteos.length; i++) { %>
                <article class="post">
                    <a href="/posteos/detallePost">
                        <img src="<%=posteos[i].imagen%>" alt="">
                    </a>
                </article> 
                <%     } %> 
            </section>
        </div>
    </main>

    <%- include('./partials/footer') %> 
</body>

</html>